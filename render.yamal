services:
  - type: web
    name: ai-rubric-generator
    env: python
    plan: free
    buildCommand: pip install --upgrade pip && pip install -r requirements.txt
    startCommand: gunicorn app:app --bind 0.0.0.0:$PORT
    runtime: python-3.12.5
    envVars:
      - key: OPENAI_API_KEY
        sync: false
